<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nootus.Fabric.Mobile.Dialog.DialogView">
    <ContentPage.Content>
        <StackLayout Margin="20" BackgroundColor="Transparent" 
                     HorizontalOptions="FillAndExpand" VerticalOptions="Center">
            <StackLayout BackgroundColor="White" Padding="20" HorizontalOptions="Center" VerticalOptions="Center"
                       x:Name="LoadingStack">
                <ActivityIndicator IsRunning="True" Color="Black" />
                <Label FontAttributes="Bold" Text="Loading..." TextColor="Black" />
            </StackLayout>
            <StackLayout BackgroundColor="White" Padding="20" Orientation="Horizontal" HorizontalOptions="Center"  
                         VerticalOptions="Center" x:Name="AlertStack">
                <ActivityIndicator IsRunning="True" Color="Black" />
                <Label FontAttributes="Bold" Text="Message" TextColor="Black" HorizontalOptions="FillAndExpand" VerticalOptions="Center" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
 