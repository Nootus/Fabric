<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nootus.Fabric.Mobile.Views.FormField"
             xmlns:behaviors="clr-namespace:Nootus.Fabric.Mobile.Behaviors;assembly=Nootus.Fabric.Mobile">
    <ContentView.Content>
        <StackLayout>
            <Label x:Name="Header"></Label>
            <Entry x:Name="Entry">
                <Entry.Behaviors>
                    <behaviors:EventToCommandBehavior x:Name="CommandBehavior" EventName="TextChanged" />
                </Entry.Behaviors>
            </Entry>
            <Label x:Name="Error"></Label>
        </StackLayout>
  </ContentView.Content>
</ContentView>